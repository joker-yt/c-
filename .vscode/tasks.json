    "tasks": [
        {
            "type": "shell",
            "label": "g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-std=c++20",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
